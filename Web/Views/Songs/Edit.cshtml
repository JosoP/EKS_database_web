@using Database.Models.Songs
@model Database.Models.Songs.Song

@{
    ViewData["Title"] = "Upraviť";
}

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" id="song-id"/>
    <div class="row">
        <div class="col-md-6">
            <h4>Upraviť pieseň @Model.Title</h4>
            <hr />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control"/>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Number" class="control-label"></label>
                <input asp-for="Number" class="form-control"/>
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author" class="control-label"></label>
                <input asp-for="Author" class="form-control"/>
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
            @* <div class="form-group row"> *@
            @*     <label asp-for="LastModifiedDateTimeLocal" class="col-sm-2 col-form-label"></label> *@
            @*     <input asp-for="LastModifiedDateTimeLocal" class="col-sm-10" readonly="readonly"/> *@
            @*     <span asp-validation-for="LastModifiedDateTimeLocal" class="text-danger"></span> *@
            @* </div> *@
        </div>
        <div class="col-md-6">
            @await Html.PartialAsync("_VerseEditPartial")
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Uložiť" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Späť do zoznamu</a>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
