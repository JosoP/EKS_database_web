@model Database.Models.Songs.Category

@{
    ViewData["Title"] = "Vytvoriť kategóriu";
}

<form asp-action="Create">
    <div class="row">
        <div class="col-6">
            <h1>Vytvoriť novú kategóriu</h1>
        </div>
        <div class="col-6">
            <button class="btn btn-primary btn-lg float-right" type="submit">
                <img src="~/img/save-32.png" alt="Uložiť" class="img-in-button">
            </button>
        </div>
    </div>
                                                            
    <hr />
                    
    <div class="col-md-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id"/>
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <input asp-for="Description" class="form-control"/>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Späť do zoznamu</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
