@model IEnumerable<Database.Models.Songs.Song>

@{
    ViewData["Title"] = "Piesne";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a class="btn btn-primary btn-sm" asp-action="Create">Vytvoriť novú pieseň</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
                @* Názov *@
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Number)
                @* Číslo *@
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SongCategories)
                @* Kategórie *@
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
                @* Autor *@
            </th>
            @* <th> *@
            @*     @Html.DisplayNameFor(model => model.LastModified) *@
            @*     $1$ Upravené #1# *@
            @* </th> *@
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var song in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => song.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => song.Number)
            </td>
            <td style="width: min-content">
                <div>
                    @foreach (var songCategory in song.SongCategories)
                    {
                        <span class="badge badge-primary">
                            @songCategory.Category.Name
                        </span>
                    }    
                </div>
            </td>
            <td>
                @Html.DisplayFor(modelItem => song.Author)
            </td>
            @* <td> *@
            @*     @Html.DisplayFor(modelItem => song.LastModifiedDateTimeLocal) *@
            @* </td> *@
            <td>
                <div class="btn-group btn-group-sm">
                    <a class="btn btn-info" asp-action="Edit" asp-route-id="@song.Id">Upraviť</a><br/>
                    <a class="btn btn-secondary" asp-action="Details" asp-route-id="@song.Id">Detaily</a><br/>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@song.Id">Odstrániť</a>
                </div>
                
            </td>
        </tr>
}
    </tbody>
</table>
