@using Database.Models.Songs
@model Database.Models.Songs.Song

@{
    ViewData["Title"] = "Upraviť";
}

<h4>Upraviť pieseň @Model.Title</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Number" class="control-label"></label>
                <input asp-for="Number" class="form-control" />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author" class="control-label"></label>
                <input asp-for="Author" class="form-control" />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
            @* <div class="form-group row"> *@
            @*     <label asp-for="LastModifiedDateTimeLocal" class="col-sm-2 col-form-label"></label> *@
            @*     <input asp-for="LastModifiedDateTimeLocal" class="col-sm-10" readonly="readonly"/> *@
            @*     <span asp-validation-for="LastModifiedDateTimeLocal" class="text-danger"></span> *@
            @* </div> *@
            <div class="form-group" >
                <h5><label asp-for="Verses" class="control-label"></label></h5>
                @{
                    for (int i = 0; i < Model.Verses.Count; i++)
                    {
                        <hr />
                        <input asp-for="Verses[i].Id" type="hidden"/>
                        <input asp-for="Verses[i].SongId" type="hidden" />
                        <input asp-for="Verses[i].SequenceNumber" type="hidden" />
                        <div class="form-group row">
                            <label asp-for="Verses[i].Title" class="col-sm-2 col-form-label"></label>
                            <input asp-for="Verses[i].Title" class="col-sm-5"/>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Verses[i].Text" class="col-sm-2 col-form-label"></label>
                            <textarea asp-for="Verses[i].Text" class="col-sm-10" rows="5"></textarea>
                        </div>
                    }

                }
            </div>
            <div class="form-group">
                <input type="submit" value="Uložiť" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Späť do zoznamu</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
